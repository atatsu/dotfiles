#!/bin/zsh -f 

ps aux | grep pavucontrol | grep -v grep >/dev/null
if [ $? -ne 0 ]; then
    i3-msg exec pavucontrol >/dev/null
    sleep 1
    i3-msg '[title="Volume Control"] move scratchpad' >/dev/null
    i3-msg '[title="Volume Control"] scratchpad show' >/dev/null
else
    i3-msg '[title="Volume Control"] scratchpad show' >/dev/null
fi
